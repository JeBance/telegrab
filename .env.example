# Получить на https://my.telegram.org
API_ID=ваш_api_id_число
API_HASH=ваш_api_hash_32символа
PHONE=+79991234567

# API ключ для аутентификации (генерируется автоматически при первом запуске)
API_KEY=ваш_api_key_или_оставьте_пустым_для_автогенерации

# Режим работы (test или production)
# test — тестовые сервера Telegram (безопасно для разработки)
# production — боевые сервера Telegram
TELEGRAM_MODE=production

# Настройки API
API_PORT=3000

# Настройки загрузки истории
AUTO_LOAD_HISTORY=true
HISTORY_LIMIT_PER_CHAT=200
MAX_CHATS_TO_LOAD=20

# Восстановление пропущенных сообщений
AUTO_LOAD_MISSED=true
MISSED_LIMIT_PER_CHAT=500
MISSED_DAYS_LIMIT=7

# Ограничение скорости
REQUESTS_PER_SECOND=1
MESSAGES_PER_REQUEST=100

# Прокси для обхода блокировок (опционально)
# Примеры: socks5://user:pass@proxy:1080
#          http://proxy:8080
PROXY=
